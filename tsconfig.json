{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "strictFunctionTypes": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noImplicitAny": false, // Disables errors for implicitly typed 'any'
    "noFallthroughCasesInSwitch": false, // Disables errors for switch cases without fallthrough
    "noEmitOnError": true, // Prevents JS emission if errors exist,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": [
    "node_modules", // Common exclusion
    "src/legacy-code/**/*", // Excludes a specific folder
    "src/untyped-library.js" // Excludes a specific file
  ]
}
